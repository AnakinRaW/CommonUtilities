<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>Shared set of common classes and utilities for all of my software.</Description>
		<AssemblyVersion>2.0.0.0</AssemblyVersion>
		<Version>2.1.1</Version>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
		<RootNamespace>Sklavenwalker.CommonUtilities</RootNamespace>
		<AssemblyName>Sklavenwalker.CommonUtilities</AssemblyName>
		<Nullable>enable</Nullable>
		<EnableNETAnalyzers>true</EnableNETAnalyzers>
	</PropertyGroup>

	<PropertyGroup>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<InheritDocEnabled>true</InheritDocEnabled>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.IO.Abstractions" Version="17.0.24" />
		<PackageReference Include="Validation" Version="2.5.51" />
	</ItemGroup>

</Project>
