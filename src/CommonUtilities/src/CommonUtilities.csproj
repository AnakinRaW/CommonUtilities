<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>Shared set of common classes and utilities for all of my software.</Description>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
		<RootNamespace>AnakinRaW.CommonUtilities</RootNamespace>
		<AssemblyName>AnakinRaW.CommonUtilities</AssemblyName>
		<Nullable>enable</Nullable>
		<EnableNETAnalyzers>true</EnableNETAnalyzers>
	</PropertyGroup>

	<PropertyGroup>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<InheritDocEnabled>true</InheritDocEnabled>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.IO.Abstractions" Version="19.1.14" />
		<PackageReference Include="Validation" Version="2.5.51" PrivateAssets="compile"/>
	</ItemGroup>

</Project>
